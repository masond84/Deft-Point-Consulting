{
  "compilerOptions": {
    "target": "ESNext", // Set to your desired target (e.g., ESNext, ES6)
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*", // Include all source files
    "vite-env.d.ts" // Include specific type declarations
  ],
  "exclude": [
    "node_modules", // Exclude node_modules folder
    "dist" // Exclude build output folder
  ],
}